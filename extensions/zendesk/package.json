{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zendesk",
  "title": "Zendesk",
  "description": "Work with tickets and Help Center",
  "icon": "icon.png",
  "author": "justin_martin",
  "license": "MIT",
  "homepage": "https://github.com/Unicornninja80/raycast-zendesk",
  "repository": {
    "type": "git",
    "url": "https://github.com/Unicornninja80/raycast-zendesk.git"
  },
  "private": true,
  "categories": ["Productivity"],
  "preferences": [
    {
      "name": "subdomain",
      "type": "textfield",
      "title": "Zendesk Subdomain",
      "description": "Your Zendesk subdomain (e.g., company for company.zendesk.com)",
      "required": true,
      "placeholder": "company"
    },
    {
      "name": "email",
      "type": "textfield",
      "title": "Agent Email",
      "description": "Your Zendesk agent email address",
      "required": true,
      "placeholder": "agent@company.com"
    },
    {
      "name": "apiToken",
      "type": "password",
      "title": "API Token",
      "description": "Your Zendesk API token",
      "required": true,
      "placeholder": "Enter your API token"
    }
  ],
  "commands": [
    {
      "name": "tickets",
      "title": "My Tickets",
      "subtitle": "Zendesk",
      "description": "View and manage your assigned tickets",
      "mode": "view"
    },
    {
      "name": "search-zendesk-support-center",
      "title": "Search Articles",
      "subtitle": "Zendesk",
      "description": "Search Help Center articles",
      "mode": "view"
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray dev",
    "lint": "eslint --ext .ts,.tsx src",
    "lint:fix": "eslint --ext .ts,.tsx src --fix",
    "typecheck": "tsc --noEmit",
    "publish": "npx @raycast/api@latest publish"
  },
  "dependencies": {
    "@raycast/api": "1.102.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "typescript": "~5.4.5"
  }
}
